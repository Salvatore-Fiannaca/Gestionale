<style>
    #visualizza_cliente_ricercato {
      display: none;
    }
  </style>
  
<!-- form ricerca cliente -->
<h1 class="h3 mb-2 text-gray-800">Lista Clienti</h1>
<p>Elenco completo dei clienti registrati</p>
<br>
<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Tabella di esempio</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Nome Completo</th>
            <th>Contatti</th>
            <th>Codice Fiscale</th>
            <th>Città</th>
            <th>Indirizzo</th>
            <th>CAP</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Nome Completo</th>
            <th>Contatti</th>
            <th>Codice Fiscale</th>
            <th>Città</th>
            <th>Indirizzo</th>
            <th>CAP</th>
          </tr>
        </tfoot>
        <tbody>
          <tr>
            <td>Cliente</td>
            <td>example@gmail.com + cell</td>
            <td>FNNSVT.ect</td>
            <td>Via 1</td>
            <td>Palermo</td>
            <td>00001</td>
          </tr>
          <tr>
            <td>Cliente2</td>
            <td>example@tiscali.it + cell</td>
            <td>GNNST.ect</td>
            <td>Via 2</td>
            <td>Roma</td>
            <td>00002</td>
          </tr>
          <!-- LIST CLIENT FROM DB--> 
            <% clientList.forEach(client => { %>
            <tr>
              <td><%= client.firstName + " " + client.lastName %></td>
              <td><%= client.email + " cell:" + client.phone %></td>
              <td><%= client.FiscalCode %></td>
              <td><%= client.city %></td>
              <td><%= client.address %></td>
              <td><%= client.zipCode %></td>
            </tr>
            <% }) %> 
        </tbody>
      </table>
    </div>
  </div>
</div>

</div>