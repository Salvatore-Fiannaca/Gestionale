<script>
  var widthInProgress = "<%= numberInProgress %>";
  if ( isNaN( widthInProgress ) === true) {widthInProgress = 0}
  document.getElementById("inProgress").style.width = widthInProgress + "%";
  document.getElementById("labelInProgress").innerText = widthInProgress + "%";


  var widthCompleted = "<%= numberOfCompleted %>";
  if ( isNaN( widthCompleted ) === true ) {widthCompleted = 0}
