<!-- form ricerca cliente -->

<h1 class="h3 mb-2 text-gray-800">Lista Allegati</h1>
<p>Relativi al lavoro: <%= code %> 
  <a href="/work-upload_<%= code %>">
    <button type="button" class="btn btn-sm btn-success mb-4 float-right">
      Inserisci nuovo allegato
    </button>
  </a>
</p>
<br>
<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Database</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Allegato</th>
            <th></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Allegato</th>
            <th></th>
          </tr>
        </tfoot>
        <tbody>
          <!-- LIST FROM DB--> 
            <% clientList.forEach(file => { %>
            <tr>
              <td>
                <a href="work-file_<%= file._id %>">
                  <button class="btn btn-sm btn-light" data-toggle="tooltip" data-placement="top" title=" ">
                    <%= file.originalname %>
                  </button>
                </a>
              </td>
              <td>
                <form action ="file_<%= file._id %>" method="POST" id="btnDelete">
                  <button type="submit" class="btn btn-sm btn-danger" value="Submit"> X </button>
                </form>
              </td>
            </tr>
            <% }) %> 
        </tbody>
      </table>
    </div>
  </div>
</div>

</div>