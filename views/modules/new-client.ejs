<style>
  form input:invalid {
    border-color: red;
  }
</style>

<!--      MODULO MODIFICA/CANCELLA CLIENTI-->
<h1 class="h3 mb-4 text-gray-800">Registra un nuovo cliente</h1>
<!-- FORM REGISTRA CLIENTI -->
<form method="POST" action="client" class="mb-4">
  <div class="row">
    <div class="col">
      <input
        type="text"
        name="firstName"
        class="form-control"
        placeholder="Nome *"
        pattern="[A-Za-z0-9\s]{3,20}[A-Za-z0-9\s]{3,20}"
        value=""
        required
        />
    </div>
    <div class="col">
      <input
        type="text"
        name="lastName"
        class="form-control"
        placeholder="Cognome *"
        pattern="[A-Za-z0-9\s]{3,20}[A-Za-z0-9\s]{3,20}"
        value=""
        required
      />
    </div>
  </div>
  <br />
  <div class="form-group">
    <input
      type="text"
      name="fiscalCode"
      placeholder="Codice Fiscale *"
      class="form-control"
      pattern="^[a-zA-Z]{6}[0-9]{2}[a-zA-Z][0-9]{2}[a-zA-Z][0-9]{3}[a-zA-Z]$"
      value=""
      required
    />
  </div>
  <div class="form-group">
    <input
      type="text"
      name="address"
      placeholder="Indirizzo *"
      class="form-control"
      pattern="[A-Za-z0-9\s]{3,20}[A-Za-z0-9\s]{3,20}"
      value=""
      required
    />
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <input 
      type="text" 
      name="city" 
      placeholder="CittÃ " 
      class="form-control" 
      pattern="[A-Za-z0-9\s]{3,20}"
      value=""
      />
    </div>
    <div class="form-group col-md-4">
      <select name="state" class="form-control" selected value="Italia">
        <option value="Europa">Europa</option>
        <option value="Estero">Estero</option>
      </select>
    </div>
    <div class="form-group col-md-2">
      <input
        type="text"
        name="zipCode"
        placeholder="CAP"
        class="form-control"
        pattern="[A-Za-z0-9-]{5,10}"
        value=""
      />
    </div>
    <div class="form-group col-md-6">
      <input
        type="email"
        name="email"
        placeholder="Email"
        class="form-control"
        maxlength="30"
        value=""
      />
    </div>
    <div class="form-group col-md-6">
      <input
        type="number"
        name="phone"
        placeholder="Telefono"
        class="form-control"
        pattern="[0-9]{3,12}"
        value=""
      />
    </div>
    <a href="/clients">
      <button type="button" class="btn btn-primary">
        Registra
      </button>
    </a>
  </div>
</form>

