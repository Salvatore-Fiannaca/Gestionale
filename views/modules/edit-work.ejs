
<h1 class="h3 mb-4 text-gray-800"> Edita Lavoro</h1>
<p>Cliente: <%= clientList[0].client %> </p>
<!--   -->
<!-- FORM REGISTRA LAVORO -->
<form method="POST" action="update-work_<%=clientList[0].client %>">
  <div class="form-row">
    <div class="form-group col-md-6">
      <input 
      type="text" 
      value="<%= clientList[0].work.title %>" 
      name="title" 
      placeholder="Nome lavoro" 
      class="form-control" 
      pattern="[A-Za-z0-9\s]{1,20}[A-Za-z0-9-]{1,20}"
      required />
    </div>
    <div class="form-group col-md-4">
      <select name="folder" class="form-control">
        <option selected><%= clientList[0].work.folder.title %></option>
        <option value="PROGETTI">PROGETTI</option>
        <option value="DOCFA">DOCFA</option>
        <option value="PREGEO">PREGEO</option>
        <option value="VARIE">VARIE</option>
        <option value="">...</option>
      </select>
    </div>
    <div class="form-group col-md-2">
      <input 
      type="number" 
      value="<%= clientList[0].work.folder.number %>" 
      name="nFolder" 
      placeholder="NÂ°" 
      class="form-control" 
      pattern="[0-9\s]{3,10}[0-9\s]{3,10}"
      required 
      />
    </div>
    <div class="form-group col-md-8">
      <textarea 
      name="comments" 
      value="" 
      placeholder="Spazio per i commenti" 
      class="form-control" 
      id="exampleFormControlTextarea1" 
      rows="3"
      pattern="[A-Za-z0-9\s-_.]"
      maxlength="200"
      ><%= clientList[0].work.comments %>
      </textarea>
    </div>
    <div class="form-group col-md-4">
      <select name="status" class="form-control">
        <option selected><%= clientList[0].work.status %></option>
        <option value="Concluso">Concluso</option>
        <option value="In corso">In Corso</option>
        <option value="In attesa di pagamento">In attesa di pagamento</option>
        <option value="Sospeso">Sospeso</option>
        <option value="In revisione">In revisione</option>
      </select>
    </div>
  </div>
  <button type="submit" value="Submit"class="btn btn-primary">Aggiorna</button>
</form>

<form action ="work_<%= clientList[0]._id %>" method="POST" id="btnDelete">
   <!-- Button trigger modal -->
   <button type="button" class="btn btn-danger btn-icon-split mt-2" data-toggle="modal" data-target="#staticBackdrop">
    <span class="icon text-white-50"><i class="fas fa-trash"></i></span>
    <span class="text">      
      Cancella
    </span>
  </button>
  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Attenzione!</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Se presenti, verranno rimossi tutti gli allegati relativi al lavoro, vuoi continuare?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Annulla</button>
          <button type="submit" class="btn btn-danger" value="Submit">Cancella</button>
        </div>
      </div>
    </div>
  </div>
</form>



