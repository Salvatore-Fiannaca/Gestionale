
<!--      MODULO EDITA UTENTE -->
<h1 class="h3 text-gray-800">
  Profilo Utente
</h1>
<br>

<!-- FORM  -->
<form method="POST" action="">
  <div class="form-group col-md-6">
    Username <input type="text" name="username" placeholder="Username" class="form-control" value="<%= username %>"/>
  </div>
  <div class="form-group col-md-6">
    Password Corrente <input type="text" name="nowPassword" placeholder="" class="form-control" value="" readonly/>
  </div>
  <div class="form-group col-md-6">
    Nuova Password <input type="text" name="newPassword" placeholder="" class="form-control" value="" readonly/>
  </div>
  <div class="form-group col-md-6">
    Conferma Nuova Password <input type="text" name="newPassword2" placeholder="" class="form-control" value="" readonly/>
  </div>
  <div class="form-group ml-4">
    <button type="submit" value="Submit"class="btn btn-primary mt-4">Aggiorna</button>
  </div>
</form>

  <!-- 
    <form action="" method="POST" id="btnDelete">
  -->
<form id="btnDelete">
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-danger btn-icon-split ml-4 mb-4" data-toggle="modal" data-target="#staticBackdrop">
    <span class="icon text-white-50"><i class="fas fa-trash"></i></span>
    <span class="text">      
      Elimina
    </span>
  </button>

  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Attenzione!</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Stai per cancellare definitivamente il tuo account con i relativi contenuti, vuoi comunque continuare?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Annulla</button>
          <!-- 
            <button type="submit" class="btn btn-danger" value="Submit">Procedi</button>
          -->
          <button type="submit" class="btn btn-danger" value="#">Procedi</button>
        </div>
      </div>
    </div>
  </div>
</form> 
