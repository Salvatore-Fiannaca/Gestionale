<h1 class="h3 text-gray-800 ml-2"><%= username %></h1>
<br />

<% if (redMsg) { %>
<div class="alert alert-danger" role="alert" id="msg"><%= text %></div>
<% } %> <% if (greenMsg) { %>
<div class="alert alert-success" role="alert" id="msg"><%= text %></div>
<% } %>

<!-- FORM  -->
<form method="POST" action="edit-user">
  <div class="form-group col-md-6">
    Nuova Password
    <input
      type="password"
      name="newPass"
      placeholder=""
      class="form-control"
      pattern="[A-Za-z0-9_-]{6,20}"
      value=""
      required
    />
  </div>
  <div class="form-group col-md-6">
    Conferma Nuova Password
    <input
      type="password"
      name="newPass2"
      placeholder=""
      class="form-control"
      pattern="[A-Za-z0-9_-]{6,20}"
      value=""
      required
    />
  </div>
  <div class="form-group ml-4">
    <button type="submit" value="Submit" class="btn btn-primary mt-4">
      Aggiorna
    </button>
  </div>
</form>

<!-- 
    <form action="" method="POST" id="btnDelete">
  -->
<form method="POST" id="btnDelete" action="delete-me">
  <!-- Button trigger modal -->
  <button
    type="button"
    class="btn btn-danger btn-icon-split ml-4 mb-4"
    data-toggle="modal"
    data-target="#staticBackdrop"
  >
    <span class="icon text-white-50"><i class="fas fa-trash"></i></span>
    <span class="text"> Elimina </span>
  </button>

  <!-- Modal -->
  <div
    class="modal fade"
    id="staticBackdrop"
    data-backdrop="static"
    data-keyboard="false"
    tabindex="-1"
    aria-labelledby="staticBackdropLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Attenzione!</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Assicurati di aver cancellato ogni cliente e ogni allegato, prima di continuare.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Annulla
          </button>
          <!-- 
            <button type="submit" class="btn btn-danger" value="Submit">Procedi</button>
          -->
          <button type="submit" class="btn btn-danger" value="#">
            Cancellami
          </button>
        </div>
      </div>
    </div>
  </div>
</form>
